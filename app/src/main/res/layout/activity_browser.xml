<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34495e"
    android:weightSum="1">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:max="100"
        android:progress="0"
        android:visibility="gone" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/webView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="1dp" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/browser_back_button"
            android:id="@+id/menu_button"
            android:layout_weight="0.2"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/history_back"
            android:id="@+id/history_back_button"
            android:layout_weight="0.2"
            android:enabled="false"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/history_forward"
            android:id="@+id/history_forward_button"
            android:layout_weight="0.2"
            android:enabled="false"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/button_Reload"
            android:id="@+id/reload_button"
            android:layout_weight="0.2"
            android:textSize="12sp"
            android:visibility="visible"
            android:textStyle="bold"
            android:layout_margin="1px" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/button_stopLoading"
            android:id="@+id/stop_button"
            android:layout_weight="0.2"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:inputType="textUri"
        android:enabled="true" />

</LinearLayout>